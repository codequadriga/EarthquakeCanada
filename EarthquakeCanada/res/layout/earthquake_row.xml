<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
  android:orientation="vertical"
  android:layout_width="fill_parent"
  android:layout_height="fill_parent">
  
  <LinearLayout android:orientation="vertical" android:baselineAligned="false" android:layout_width="fill_parent" android:layout_height="wrap_content" android:padding="5dip">
  <LinearLayout android:layout_gravity="center_vertical" android:layout_height="0dp" android:layout_width="fill_parent" android:layout_weight="1.0" >
    		<LinearLayout android:layout_gravity="center_vertical" android:layout_width="wrap_content" android:orientation="horizontal" android:layout_height="wrap_content">
	        	<TextView android:textColor="#ffffff" android:id="@+id/tvMagnitude" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="6.0" android:textSize="25sp" android:textStyle="bold" android:gravity="center" android:layout_gravity="center_vertical|left" android:background="@drawable/zero" ></TextView>
	        </LinearLayout>
	        
		  	<LinearLayout android:padding="3dip" android:layout_gravity="center_vertical" android:orientation="vertical" android:layout_width="fill_parent" android:layout_height="wrap_content" >
	            <TextView
			      android:id="@+id/eqtitle"
			      android:textStyle="bold"
			      android:layout_width="wrap_content"
			      android:layout_height="wrap_content"
			      android:textSize="20dip"
			      android:textColor="#000000"
			      android:layout_gravity="center_vertical"></TextView>
	            
	            <LinearLayout android:orientation="horizontal" android:layout_width="fill_parent" android:layout_height="wrap_content" android:weightSum="2">
		           
		            <TextView
				      android:id="@+id/tvDatetime"
				      android:layout_width="wrap_content"
				      android:layout_height="wrap_content"
				      android:textSize="14dip"
				      android:padding="2.0dip"
				      android:layout_weight="1.0"
				      android:textColor="#858585"
				      android:layout_gravity="left" android:gravity="left" android:text="time"></TextView>
				     <TextView
				      android:id="@+id/tvProvience"
				      android:layout_width="wrap_content"
				      android:layout_height="wrap_content"
				      android:textSize="14dip"
				      android:layout_weight="1.0"
				      android:textStyle="bold"
				      android:textColor="#858585" android:text="Province"
				      android:layout_gravity="right" android:gravity="right"></TextView>
				 </LinearLayout>	
	            
	        </LinearLayout>
  </LinearLayout>
  </LinearLayout>
  
  
</RelativeLayout>
